@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="full-BGstrip">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l govuk-!-margin-bottom-4">Family hubs</h1>
            <p>Family hubs bring local services together in one place for families, children and young people.</p>
            <p>Each family hub or children’s centre offers a different range of services, for example:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>
                    breastfeeding support
                </li>
                <li>
                    child development clinics
                </li>
                <li>
                    parenting workshops
                </li>
                <li>
                    mental health help
                </li>
                <li>
                    groups and clubs
                </li>
            </ul>
            <p>Choose an option below to find out more.</p>
        </div>
    </div>
</div>

